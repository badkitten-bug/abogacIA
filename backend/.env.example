# Base de datos
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/abogacia

# JWT
SECRET_KEY=tu-secret-key-super-segura-cambiar-en-produccion-1234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - URLs del frontend (separadas por coma si hay varias)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# ============================================
# LLM PROVIDER - CAMBIAR AQUÍ PARA USAR OTRA IA
# ============================================
# Opciones: "ollama" (local) o "groq" (cloud gratis)
LLM_PROVIDER=ollama

# Ollama (local) - Requiere tener Ollama instalado
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Groq (cloud) - Gratis, muy rápido
# Obtén tu API key en: https://console.groq.com
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# ============================================
# ChromaDB (Vector Store)
# ============================================
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION=legal_documents

# Modelo de embeddings
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
